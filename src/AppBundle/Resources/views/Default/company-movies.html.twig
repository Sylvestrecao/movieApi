{% extends('layout/layout.html.twig') %}

{% block body %}
    <div class="container">
        <!-- Page Heading/Breadcrumbs -->
        <div class="row mg-t-50">
            <div class="col-lg-12">
                <ol class="breadcrumb">
                    <li><a href="{{ path('homepage') }}">Accueil</a>
                    </li>
                    <li class="active">Company: {{ companyName }}</li>
                </ol>
            </div>
            <div class="col-md-12">
                <h3 class="mg-0">Liste de films produit par {{ companyName }}</h3>
            </div>
        </div>
        <!-- /.row -->
        <div class="row mg-t-50">
            {{ render(controller('AppBundle:Movie:includeMovieResults', {listMovies: companyMovies})) }}
            {{ render(controller('AppBundle:Movie:includePagination', {listMovies: companyMovies, previousFormId: 'previousPageCompany', nextFormId: 'nextPageCompany', inputName: 'page-company', action: path('company_movies', {company_id: companyId, company_name: companyName})})) }}
        </div>
    </div>

{% endblock %}