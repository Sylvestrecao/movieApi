{% trans_default_domain 'FOSUserBundle' %}
    <div class="row">
        <div class="col-md-12">
            {% if error %}
                <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
            <form action="{{ path("fos_user_security_check") }}" method="post" class="form-horizontal">
                {% if csrf_token %}
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                {% endif %}
                <div class="form-group">
                    <label for="username" class="control-label col-sm-3">{{ 'security.login.username'|trans }}</label>
                    <div class="col-sm-9">
                        <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="password" class="control-label col-sm-3">{{ 'security.login.password'|trans }}</label>
                    <div class="col-sm-9">
                        <input class="form-control" type="password" id="password" name="_password" required="required"/>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-3 col-sm-4">
                        <label for="remember_me"><input type="checkbox" id="remember_me" name="_remember_me" value="on" /> {{ 'security.login.remember_me'|trans }}</label>
                    </div>
                    <div class="col-sm-4">
                        <a href="{{ path('fos_user_resetting_request') }}">Mot de passe oubli√© ?</a>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-3 col-sm-9">
                        <input class="btn btn-info" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
                    </div>
                </div>
            </form>
        </div>
    </div>


