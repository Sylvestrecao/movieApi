{% trans_default_domain 'FOSUserBundle' %}

{{ form_start(form, { 'action': path('fos_user_profile_edit'), 'attr': { 'class': 'fos_user_profile_edit form-horizontal' } }) }}
{{ form_errors(form) }}
    <div class="form-group">
        <div class="col-sm-2">
            {{ form_label(form.username, "Nom d'utilisateur:") }}
        </div>
        <div class="col-sm-10{% if not form.username.vars.valid %}has-error{% endif %}">
            {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.username) }}
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-2">
            {{ form_label(form.email, "Adresse e-mail:") }}
        </div>
        <div class="col-sm-10{% if not form.email.vars.valid %}has-error{% endif %}">
            {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.email) }}
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-2">
            {{ form_label(form.profileImage.file, "Image de profile:") }}
        </div>
        <div class="col-sm-10{% if not form.profileImage.file.vars.valid %}has-error{% endif %}">
            {{ form_widget(form.profileImage.file) }}
            {{ form_errors(form.profileImage.file) }}
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <input class="btn btn-info" type="submit" value="Modifier" />
        </div>
    </div>
{{ form_rest(form) }}
{{ form_end(form) }}
